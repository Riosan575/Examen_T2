
<body class="registro">
    <div class="tm-section tm-bg-img" id="tm-section-1">
        <div class="container text-md-center">
            <div class="row justify-content-center pt-5 mt-5 mr-1">
                <div class="col-md-4 formulario">
                    <form action="/usuario/create" method="post">
                        <div class="form-group text-center">
                            <br />
                            <h3 class="titulo">Crear Usuario </h3>
                        </div>
                        <div class="form-group mx-sm-4 ">
                            <input type="text" value="" name="Usuario" class="form-control" placeholder="Usuario" />
                            @Html.ValidationMessage("Usuario")
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="password" value="" name="Contraseña" class="form-control" placeholder="Contraseña" />
                        </div>
                        <div class="form-group mx-sm-4 pb-1">
                            <input type="submit" class="btn btn-primary registrara" value="Registrarse" />
                        </div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

