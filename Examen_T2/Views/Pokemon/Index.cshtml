@{
    // List<Account> accounts = ((List<Account>)ViewBag.Accounts); // forma A
    List<Pokemon> pokemons = ((List<Pokemon>)Model); // forma B
}

<h1>Pokemones</h1>
<form class="form-inline">
    <input class="form-control mr-sm-2 my-sm-0" type="search" placeholder="Buscar" name="search" value="@ViewBag.Buscar">
    <button class="btn btn-primary" type="submit">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in pokemons)
        {
        <tr>
            <td>
                <img src="@item.ImagePath" width="100" alt="Alternate Text" />
            </td>
            <td>@item.Nombre</td>
            <td>@item.Tipo.Nombre</td>
            <td>
                <a href="/atrapar/atrapar?Pokemonid=@item.Id">Capturar</a>
            </td>
        </tr>
        }
    </tbody>
</table>

